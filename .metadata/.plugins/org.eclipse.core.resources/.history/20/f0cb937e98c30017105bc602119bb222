import javax.swing.JOptionPane;

public class Home1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double[] number = new double[30];
		//double oddnum = 0.0;
		//double evenum = 0.0;
		for(int n=0; n<=number.length ; n++) {
			String input = JOptionPane.showInputDialog("Plese Input Number");
			if(input.equals("stop")) { JOptionPane.showMessageDialog(null, "Stop Input Number"); break; }
			else{
				double output = Double.parseDouble(input);
				//System.out.print(output);
				int opint = (int) output;
				//int[] eve = new int[30]; int[] odd = new int[30];
				//int pp = opint%2 ;
				if(opint%2==0) { 
					int[] eve = new int[30];
					int pp = eve[opint];
					JOptionPane.showMessageDialog(null, pp,"eve",JOptionPane.INFORMATION_MESSAGE); }
				else {  JOptionPane.showMessageDialog(null, opint ,"odd",JOptionPane.INFORMATION_MESSAGE); }
			}
		}
		//int eve = new int[30];
		//int odd = new int[30];
		//JOptionPane.showMessageDialog(null, pp);
		//JOptionPane.showMessageDialog(null, odd);
	}

}
